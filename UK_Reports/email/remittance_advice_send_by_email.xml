<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> <!-- TODO: noupdate="1" -->

        <record id="email_template_remittance_advice_id" model="mail.template">
            <field name="name">Remittance Advice</field>
            <field name="email_from">${(object.company_id.accounts_dept_email or '')|safe}</field>
            <field name="subject">Subject Line:Remittance Advice</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="reply_to">${(object.company_id.accounts_dept_email or '')|safe}</field>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="UK_Reports.uk_remitance_advice_print"/>
            <field name="report_name">RA_${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
            <div>
                <p>Dear ${object.partner_id.name}</p>
                <p>Please see the attached Remittance Advice.</p>
            </div>
            ]]>
            </field>
        </record>


    </data>
</odoo>
