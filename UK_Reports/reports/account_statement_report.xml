<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- TODO: This is all wrong, the account statement should not be based on the partner -->
		<template id="uk_partner_account_statement_document">
        	<t t-call="UK_Reports.external_layout_uk">
			    <div class="page">
			    	<span>Statement Placeholder</span>
			    </div>
			</t>
		</template>

		<report
		    id="uk_partner_statement_print"
		    model="res.partner"
		    string="Account statement (UK format)"
		    report_type="qweb-pdf"
		    name="UK_Reports.uk_partner_account_statement"
		    file="UK_Reports.uk_partner_account_statement"
		    attachment="((object.name or '')+'AccountStatement'+'.pdf')"
		/>

	    <template id="uk_partner_account_statement">
	        <t t-call="report.html_container">
	            <t t-foreach="docs" t-as="o">
	                <t t-call="UK_Reports.uk_partner_account_statement_document" t-lang="user.partner_id.lang"/>
	            </t>
	        </t>
	    </template>
	</data>
</odoo>
