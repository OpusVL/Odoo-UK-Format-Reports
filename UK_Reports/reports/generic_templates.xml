<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="template_partner_address">
			<strong>Supplier:</strong>
	        <div t-if="o.partner_id">
	            <div t-field="o.partner_id"
	                t-options='{
	                	"widget": "contact",
	                	"fields": ["address", "name"],
	                	"no_marker": True}'/>
	        </div>
	    </template>
	    <template id="template_deliver_to_address">
			<strong>Deliver To:</strong>
            <div t-if="o.company_id.partner_id">
                <div t-field="o.company_id.partner_id"
                    t-options='{
                    	"widget": "contact",
                    	"fields": ["address", "name"],
                    	"no_marker": True}'/>
            </div>
	    </template>
	    <template id="template_invoice_address">
			<strong>Invoicing address:</strong>
            <div t-if="o.partner_invoice_id">
                <div t-field="o.partner_invoice_id"
                    t-options='{
                    	"widget": "contact",
                    	"fields": ["address", "name"],
                    	"no_marker": True}'/>
            </div>
	    </template>
	    <template id="template_delivery_address">
			<strong>Delivery address:</strong>
            <div t-if="o.partner_shipping_id">
                <div t-field="o.partner_shipping_id"
                    t-options='{
                    	"widget": "contact",
                    	"fields": ["address", "name"],
                    	"no_marker": True}'/>
            </div>
	    </template>
	    <template id="template_document_title">
	    	<div class="document-header align-center">
	    		<span class="bold" t-esc="doc_header_string"/>
	    	</div>
	    	<br/>
	    </template>
	    <template id="orderline_totals_table">
			<table class="orderlines-totals">
				<tr class="row-border-top">
					<td class="text-left bold">Net Total</td>
					<td class="text-right" t-esc="'%.2f'% o.amount_untaxed"/>
				</tr>
				<tr>
					<td class="text-left bold">VAT</td>
					<td class="text-right" t-esc="'%.2f'% o.amount_tax"/>
				</tr>
				<tr class="row-border-top">
					<td class="text-left bold">Total</td>
					<td class="text-right" t-esc="'%.2f'% o.amount_total"/>
				</tr>
			</table>
	    </template>
	    <template id="sale_orderlines_table">
    		<table class="orderlines">
    			<thead class="orderline-header">
	    			<tr>
	    				<th class="wide">Description</th>
	    				<th class="text-right">Quantity</th>
	    				<th class="text-right">Unit Price</th>
	    				<th class="text-right">VAT</th>
	    				<th class="text-right">Line Total</th>
	    			</tr>
	    		</thead>
	    		<tbody>
	    			<tr t-foreach="o.order_line" t-as="line">
	    				<td t-esc="line.uk_report_description_format()"/>
	    				<td t-esc="line.qty_format()" class="text-right"/>
	    				<td t-esc="'%.2f'% line.price_unit" class="text-right"/>
	    				<td t-esc="'%.2f'% line.price_tax" class="text-right"/>
	    				<td t-esc="'%.2f'% line.price_subtotal" class="text-right"/>
	    			</tr>
	    		</tbody>
    		</table>
	    </template>
	</data>
</odoo>
