<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="rfq_body">
	    	<t t-set="doc_header_string" t-value="'Request for Quotation'"/>
	    	<t t-call="UK_Reports.template_document_title"/>
	    	<div class="row">
	    		<!-- Space the address to the right slightly -->
		    	<div class="col-xs-1"/>
		    	<div class="col-xs-5">
		    		<t t-call="UK_Reports.template_partner_address_supplier_header"/>
		    	</div>
		    	<div class="col-xs-3">
                    <t t-call="UK_Reports.template_deliver_to_address"/>
		    	</div>
		    	<div class="col-xs-3">
		    		<strong>Quotation Info:</strong>
		    		<br/>
		    		<strong>Quotation No</strong>
		    		<span t-field="o.name"/>
		    		<br/>
		    		<strong>Ordered By</strong>
		    		<span t-field="o.create_uid.name"/>
		    		<br/>
		    		<strong>Expected Date</strong>
		    		<span t-field="o.date_order" t-field-options='{"format": "dd/MM/yyyy HH:mm:ss"}'/>
		    	</div>
		    </div>
		    <br/>
	    	<div class="row">
	    		<div class="col-xs-12">
		    		<table class="orderlines">
		    			<thead class="orderline-header">
			    			<tr>
			    				<th class="xwide">Description</th>
			    				<th class="text-right">Quantity</th>
			    			</tr>
			    		</thead>
			    		<tbody>
			    			<tr t-foreach="o.order_line" t-as="line">
			    				<td t-esc="line.uk_report_description_format()"/>
			    				<td t-esc="line.qty_format()" class="text-right"/>
			    			</tr>
			    		</tbody>
		    		</table>
		    	</div>
	    	</div>
	    	<br/>
	    	<div class="row">
	    		<div class="col-xs-12">
	    			<span t-raw="o.company_id.purchase_tandc"/>
	    		</div>
	    	</div>
		</template>

		<template id="purchase_order_body">
	    	<t t-set="doc_header_string" t-value="'Purchase Order'"/>
	    	<t t-call="UK_Reports.template_document_title"/>
	    	<div class="row">
	    		<!-- Space the address to the right slightly -->
		    	<div class="col-xs-1">
		    	</div>
		    	<div class="col-xs-5">
		    		<t t-call="UK_Reports.template_partner_address_supplier_header"/>
		    	</div>
		    	<div class="col-xs-3">
                    <t t-call="UK_Reports.template_deliver_to_address"/>
		    	</div>
		    	<div class="col-xs-3">
		    		<strong>Order Info:</strong>
		    		<br/>
		    		<strong>Purchase Order No</strong>
		    		<span t-field="o.name"/>
		    		<br/>
		    		<strong>Ordered By</strong>
		    		<span t-field="o.create_uid.name"/>
		    		<br/>
		    		<strong>Date</strong>
		    		<span t-field="o.date_order" t-field-options='{"format": "dd/MM/yyyy HH:mm:ss"}'/>
		    		<br/>
		    		<strong>Currency</strong>
		    		<span t-field="o.currency_id.name"/>
		    	</div>
		    </div>
		    <br/>
	    	<div class="row">
	    		<div class="col-xs-12">
		    		<table class="orderlines">
		    			<thead class="orderline-header">
			    			<tr>
			    				<th class="wide">Description</th>
			    				<th class="text-right">Quantity</th>
			    				<th class="text-right">Unit Price</th>
			    				<th class="text-right">VAT</th>
			    				<th class="text-right">Line Total</th>
			    			</tr>
			    		</thead>
			    		<tbody>
			    			<tr t-foreach="o.order_line" t-as="line">
			    				<td t-esc="line.uk_report_description_format()"/>
			    				<td t-esc="line.qty_format()" class="text-right"/>
			    				<td t-esc="'%.2f'% line.price_unit" class="text-right"/>
			    				<td t-esc="'%.2f'% line.price_tax" class="text-right"/>
			    				<td t-esc="'%.2f'% line.price_subtotal" class="text-right"/>
			    			</tr>
			    		</tbody>
		    		</table>
		    	</div>
	    	</div>
	    	<br/>
	    	<div class="row">
	    		<div class="col-xs-8"/>
	    		<div class="col-xs-4">
	    			<t t-call="UK_Reports.orderline_totals_table"/>
	    		</div>
	    	</div>
	    	<br/>
	    	<div class="row">
	    		<strong>Please quote our Purchase Order number with your delivery</strong>
	    		<span t-raw="o.company_id.purchase_tandc"/>
	    	</div>
		</template>

		<template id="uk_purchaseorder_document">
        	<t t-call="UK_Reports.external_layout_uk">
        		<div class="page">
	        		<t t-if="o.state in ['purchase', 'done']">
	        			<t t-call="UK_Reports.purchase_order_body"/>
	        		</t>
	        		<t t-elif="o.state in ['draft', 'sent', 'to_approve']">
	        			<t t-call="UK_Reports.rfq_body"/>
	        		</t>
	        	</div>
			</t>
		</template>

		<report
		    id="uk_purchaseorder_print"
		    model="purchase.order"
		    string="Purchase Order (UK format)"
		    report_type="qweb-pdf"
		    name="UK_Reports.uk_purchaseorder"
		    file="UK_Reports.uk_purchaseorder"
		    attachment="((object.name or '')+'.pdf')"
		/>

	    <template id="uk_purchaseorder">
	        <t t-call="report.html_container">
	            <t t-foreach="docs" t-as="o">
	                <t t-call="UK_Reports.uk_purchaseorder_document" t-lang="user.partner_id.lang"/>
	            </t>
	        </t>
	    </template>
	</data>
</odoo>
