<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_uk_reports" model="ir.ui.view">
        <field name="name">stock.picking.form.uk_reports</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Unfortunately have to use following-sibling to target the node
            <button name="%(action_report_delivery)d" string="Print"....
            as it has no ID and targeting based on name breaks upgrades -->
            <xpath expr="//button[@name='do_print_picking']/following-sibling::button" position="replace">
                <button
                    id="uk_report_delivery_note_button"
                    name="%(UK_Reports.uk_delivery_note_print)d"
                    string="Print"
                    states="done"
                    type="action"
                    groups="base.group_user"/>
            </xpath>
        </field>
    </record>
</odoo>
